---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact Us | AA Cognitech',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Contact Us"
    title="Let's Discuss Your IT Staffing Needs"
    subtitle="Reach out to our team to learn how AA Cognitech can support your business with expert IT staffing, recruitment, and consulting services."
  />

  <ContactUs
    id="form"
    title="Get in Touch with Our Team"
    subtitle="Fill out the form below and one of our IT staffing specialists will contact you shortly to discuss how we can meet your specific needs."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email Address',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company Name',
      },
    ]}
    textarea={{
      label: 'Tell us about your staffing needs',
      placeholder: 'Please describe your requirements, timeline, and any specific skills you are looking for...',
    }}
    disclaimer={{
      label:
        'By submitting this form, you consent to AA Cognitech contacting you regarding your inquiry. We respect your privacy and will not share your information with third parties.',
    }}
    button="Submit Inquiry"
    description="Our team typically responds within 1 business day."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Information"
    subtitle="Multiple ways to connect with our team"
    columns={3}
    items={[
      {
        title: 'Staffing Inquiries',
        description:
          'For questions about contract staffing, permanent placement, or our global resource pool, connect with our staffing specialists.',
        icon: 'tabler:users',
      },
      {
        title: 'Recruitment Services',
        description:
          'Learn more about our Recruitment-as-a-Service (RaaS) and how we can streamline your hiring process.',
        icon: 'tabler:search',
      },
      {
        title: 'IT Consulting',
        description:
          'Discuss how our consulting services can help optimize your IT operations and drive business growth.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Phone',
        description: '+1 (800) 123-4567',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'info@aacognitech.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Office Location',
        description: '123 Tech Park Avenue, Suite 500, San Francisco, CA 94105',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Social Media Section -->
  <div class="max-w-3xl mx-auto py-12 text-center">
    <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-6">Follow Us on Social Media</h3>
    <div class="flex justify-center gap-8">
      <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition">
        <Icon name="tabler:brand-linkedin" class="w-8 h-8" />
      </a>
      <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition">
        <Icon name="tabler:brand-twitter" class="w-8 h-8" />
      </a>
      <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition">
        <Icon name="tabler:brand-facebook" class="w-8 h-8" />
      </a>
    </div>
  </div>
</Layout>
