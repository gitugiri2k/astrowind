---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us - AA Cognitech',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'AA Cognitech Team',
    }}
  >
    <Fragment slot="title">
      Connecting businesses with <br />
      <span class="text-accent dark:text-white highlight">the best IT talent</span>
    </Fragment>

    <Fragment slot="subtitle">
      At AA Cognitech, we provide expert IT staffing, recruitment, and consulting services to help your business thrive.
      Our experienced team is dedicated to supporting your goals through top-tier contract staff and permanent placement
      solutions.
    </Fragment>
  </Hero>

  <!-- Mission Widget ****************** -->

  <Steps2
    title="Our Mission"
    subtitle="At AA Cognitech, we aim to connect businesses with the best IT talent while fostering innovation and driving success. We are committed to delivering exceptional staffing solutions that meet the unique needs of each client."
    items={[
      {
        title: 'Excellence in IT Staffing',
        description:
          'We provide access to highly qualified IT professionals across various domains, ensuring our clients receive the expertise they need to succeed.',
        icon: 'tabler:diamond',
      },
      {
        title: 'Building Long-term Partnerships',
        description:
          'We focus on creating lasting relationships with both clients and candidates, understanding their needs and delivering personalized solutions.',
        icon: 'tabler:user-heart',
      },
      {
        title: 'Driving Innovation',
        description:
          'We stay at the forefront of industry trends and technologies to help our clients gain competitive advantages through talent acquisition.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Leadership Team Widget ************** -->

  <Features3
    title="Leadership Team"
    subtitle="Meet the experienced professionals leading our company and shaping our future."
    columns={3}
    items={[
      {
        title: 'Jane Doe',
        description: 'Founder & CEO with over 15 years of experience in IT recruitment and business development.',
        icon: 'tabler:user',
      },
      {
        title: 'John Smith',
        description: 'CTO with extensive background in technology consulting and workforce solutions.',
        icon: 'tabler:user',
      },
      {
        title: 'Emily Johnson',
        description: 'VP of Client Services with a passion for creating exceptional client experiences.',
        icon: 'tabler:user',
      },
    ]}
  />

  <!-- Diversity & Inclusion Widget ************** -->

  <Features2
    title="Diversity & Inclusion"
    subtitle="We believe in creating diverse, inclusive workplaces and bringing together talent from all walks of life."
    columns={2}
    items={[
      {
        title: 'Inclusive Recruitment',
        description:
          'Our recruitment processes are designed to eliminate bias and ensure equal opportunities for all candidates.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Diverse Workforce',
        description:
          'We actively seek to build a diverse talent pool that represents different backgrounds, experiences, and perspectives.',
        icon: 'tabler:world',
      },
      {
        title: 'Equitable Work Environment',
        description:
          'We help our clients create work environments where everyone feels valued, respected, and empowered to contribute.',
        icon: 'tabler:building-community',
      },
      {
        title: 'Continuous Learning',
        description:
          'We regularly train our team on diversity, equity, and inclusion best practices to better serve our clients and candidates.',
        icon: 'tabler:school',
      },
    ]}
  />
</Layout>
