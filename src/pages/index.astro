---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AA Cognitech â€” Expert IT Staffing, Recruitment & Consulting Services',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        target: '_self',
        icon: 'tabler:phone',
      },
      { text: 'Our Services', href: '/services' },
    ]}
  >
    <Fragment slot="title">
      Welcome to <span class="text-accent dark:text-white highlight">AA Cognitech</span>
    </Fragment>

    <Fragment slot="subtitle">
      We provide expert IT staffing, recruitment, and consulting services to help your business thrive. Whether you need
      top-tier contract staff or permanent placement solutions, our experienced team is here to support your goals.
    </Fragment>
  </Hero>

  <!-- Core Services Widget ************** -->
  <Features
    id="core-services"
    tagline="What We Offer"
    title="Expert IT Staffing Solutions"
    subtitle="Our core services to meet your business needs"
    columns={3}
    items={[
      {
        title: 'Contract Staffing',
        description: 'Flexible solutions for short-term projects and specialized needs.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Permanent Placement',
        description: 'Finding the perfect long-term talent for your organization.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Global Resource Pool',
        description: 'Access to skilled IT professionals worldwide, regardless of location.',
        icon: 'tabler:world',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/contact',
        target: '_self',
        icon: 'tabler:phone',
      },
      {
        text: 'Learn More',
        href: '/services',
      },
    ]}
  >
    <Fragment slot="title"> Ready to find the right IT talent? </Fragment>

    <Fragment slot="subtitle">
      Let our experienced team help you meet your staffing and consulting needs with tailored solutions for your
      business challenges.
    </Fragment>
  </CallToAction>
</Layout>
