---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services | AA Cognitech',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Expert IT Staffing & Consulting Solutions"
    subtitle="We provide comprehensive IT staffing, recruitment, and consulting services tailored to meet your business needs, with flexible onshore and offshore options to optimize your workforce."
    actions={[{ variant: 'primary', text: 'Contact Us', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AA Cognitech Services',
    }}
  />

  <!-- Features2 Widget for Main Services ************** -->

  <Features2
    title="Our IT Staffing & Consulting Services"
    subtitle="Discover our comprehensive range of solutions designed to meet your IT talent and business needs."
    columns={3}
    items={[
      {
        title: 'Contract Staffing',
        description:
          'We offer flexible staffing solutions for short-term projects, ensuring you have the right expertise when you need it. Our contract staffing services help you quickly scale your teams without long-term commitments.',
        icon: 'tabler:clock',
      },
      {
        title: 'Permanent Placement',
        description:
          'Let us help you find the perfect fit for long-term positions, with access to a wide pool of skilled candidates. Our thorough vetting process ensures you get qualified professionals who align with your company culture.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Recruitment-as-a-Service (RaaS)',
        description:
          'A scalable and cost-effective solution for companies seeking recruitment assistance without the overhead. RaaS provides you with dedicated recruiting resources that can be adjusted based on your hiring needs.',
        icon: 'tabler:refresh',
      },
      {
        title: 'IT Consulting',
        description:
          'Our consulting services help businesses optimize their IT operations, improve processes, and drive growth. We provide expert guidance on technology strategies, implementation, and management.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Global Resource Pool',
        description:
          'Access our extensive, global network of IT professionals with specialized skills in various technologies. Our global talent pool ensures you find the right expertise regardless of geographic boundaries.',
        icon: 'tabler:world',
      },
      {
        title: 'Onshore/Offshore Staffing',
        description:
          'Choose from onshore staffing for closer collaboration or offshore staffing for cost-effective solutions and flexible working hours. We provide flexible models that adapt to your business requirements.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Content Widget for Onshore/Offshore Options **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Local Collaboration',
        description:
          'Work with professionals in your time zone for real-time communication and seamless integration with your in-house teams.',
        icon: 'tabler:users',
      },
      {
        title: 'Cultural Alignment',
        description:
          'Benefit from professionals who understand your market, regulations, and business practices for smoother project execution.',
        icon: 'tabler:building',
      },
      {
        title: 'Face-to-Face Meetings',
        description:
          'Facilitate in-person interactions when needed for critical project phases or strategic discussions.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Seamless Integration',
        description: 'Easily integrate onshore professionals into your existing team structure and workflows.',
        icon: 'tabler:puzzle',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556761175-b413da4baf72?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'Onshore Staffing Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Onshore Staffing Benefits</h3>
    </Fragment>
  </Content>

  <!-- Content Widget for Offshore **************** -->

  <Content
    items={[
      {
        title: 'Cost Efficiency',
        description: 'Significantly reduce staffing costs while maintaining high-quality talent and deliverables.',
        icon: 'tabler:coin',
      },
      {
        title: '24/7 Productivity',
        description: 'Leverage time zone differences to achieve round-the-clock development and support capabilities.',
        icon: 'tabler:clock',
      },
      {
        title: 'Scalability',
        description: 'Quickly scale your team up or down based on project requirements and business needs.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Global Talent Access',
        description: 'Tap into specialized skills that might be scarce or expensive in your local market.',
        icon: 'tabler:world-search',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Offshore Staffing Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Offshore Staffing Benefits</h3>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'Learn More',
        href: '/about',
      },
    ]}
    title="Ready to optimize your IT workforce?"
    subtitle="Connect with AA Cognitech today to discuss your staffing needs and discover how our services can drive your business forward."
  />
</Layout>
